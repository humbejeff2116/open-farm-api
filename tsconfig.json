{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
   "include": ["./**/*"],
  "exclude": [
    "node_modules", 
    "./src/_marketplace/*", 
    "./src/_core/tests/*",
    "./src/_core/_micro.services/transaction/*",
    "./src/_core/_micro.services/notification/*",
    "./src/_core/_micro.services/payment/*",
    "./src/_core/_micro.services/shipping/*",
  ]
}
